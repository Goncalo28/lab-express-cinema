<div class="container">
  <h1>Movies list</h1>
  <div class="row">
    {{#each movies}}
    <div class="card" style="width: 15rem;">
      <img src={{image}} class="card-img-top" alt="card-image">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <a class="btn btn-danger" href="/movies/{{_id}}">See more</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>