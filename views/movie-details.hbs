<div class="container movie-details">
    <a href="/movies">Go back</a>
    <div class="row">
        <img src={{movie.image}}>
        <div class="col-md-8">
            <h1>{{movie.title}}</h1>
            <h5>{{movie.directorr}}</h3>
            <ul>
                {{#each movie.stars}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
            <p>{{movie.description}}</p>
            <p>
                {{#each movie.showtimes}}
                {{this}} |
                {{/each}}
            </p>
        </div>
    </div>
</div>